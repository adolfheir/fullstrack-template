{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "@fullstrack/db#generate": {
      "inputs": ["packages/db/prisma/schema.prisma"],
      "outputs": ["packages/db/src/generated/**"]
    },
    "@fullstrack/db#build": {
      "dependsOn": ["@fullstrack/db#generate"],
      "inputs": ["packages/db/prisma/src/**"],
      "outputs": ["packages/db/prisma/dist/**"]
    },
    "dev": {
      "persistent": true
    },
    "build": {
      "dependsOn": ["@fullstrack/db#build", "^build"],
      "cache": false
    }
  }
}
