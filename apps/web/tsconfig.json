{
  "extends": "@fullstrack/tsconfig/tsconfig.react.json",
  "compilerOptions": {
    "allowJs": true,
    // "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@/*": [".//*"],
      "@public/*": ["./public/*"],
      "@fullstrack/*": ["./src/app/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@materias/*": ["./src/materias/*"],
      "@pages/*": ["./src/pages/*"],
      "@services/*": ["./src/services/*"],
      "@stores/*": ["./src/stores/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json"],
  "references": [
    {
      "path": "../api/tsconfig.json"
    }
  ]
}
